{
  "name": "nodecg-mfh-mysteryshow",
  "version": "0.1.0",
  "description": "",
  "homepage": "",
  "author": {
    "name": "Maurice",
    "email": "maurice@guegan.de",
    "url": "https://guegan.de"
  },
  "scripts": {
    "autofix": "run-s autofix:*",
    "autofix:browser": "eslint --fix --ext .ts,.vue src/dashboard && eslint --fix --ext .ts,.vue src/graphics",
    "autofix:extension": "eslint --fix --ext .ts src/extension && eslint --fix --ext .d.ts src/types",
    "build": "run-s clean build:*",
    "build:browser": "vite build",
    "build:extension": "tsc -b tsconfig.extension.json",
    "clean": "rm -rf node_modules/.cache dashboard graphics extension",
    "schema-types": "nodecg schema-types",
    "start": "node ~/nodecg",
    "watch": "run-p watch:*",
    "watch:browser": "vite",
    "watch:extension": "tsc -b tsconfig.extension.json -w"
  },
  "keywords": [
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^2.1.11",
    "dashboardPanels": [
      {
        "name": "timer",
        "title": "Timer",
        "width": 2,
        "file": "timer.html"
      },
      {
        "name": "boxart-select-dialog",
        "title": "Select Boxart",
        "file": "boxart.html",
        "width": 7,
        "dialog": true
      }
    ],
    "assetCategories": [
      {
        "name": "boxarts",
        "title": "Game Boxarts",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "webp"
        ]
      },
      {
        "name": "popovers",
        "title": "Player Popovers",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "webp"
        ]
      },
      {
        "name": "eventLogos",
        "title": "Event Logos",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png",
          "webp"
        ]
      }
    ]
  },
  "repository": "github:Stabyourself/nodecg-mysteryfunhouse",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/vue-fontawesome": "^3.0.3",
    "fitty": "^2.3.6",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "timer-node": "^5.0.7"
  },
  "devDependencies": {
    "@nodecg/types": "^2.1.12",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vueuse/head": "^1.0.20",
    "bulma": "^0.9.4",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^9.8.0",
    "eslint-plugin-vuetify": "^2.1.0",
    "globby": "^13.1.2",
    "nodecg-cli": "^8.3.0",
    "nodecg-vue-composable": "file:../../../git/nodecg-vue-composable",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.5",
    "speedcontrol-util": "^0.6.1",
    "trash-cli": "^5.0.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-nodecg": "^2.0.0-rc3",
    "vite-plugin-vuetify": "^1.0.2",
    "vue": "^3.2.45",
    "vue-eslint-parser": "^9.1.0",
    "vue-inline-svg": "^3.1.2",
    "vue-tsc": "^1.0.11",
    "vuetify": "^3.4.0-beta.1"
  }
}
